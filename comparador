library IEEE;
use IEEE.STD_LOGIC_1164.ALL;

entity comparador is
  Port (
    precio: in std_logic_vector(4 downto 0);
    introducido: in std_logic_vector(4 downto 0);
    reset: in std_logic;
    mayor: out std_logic;
    menor: out std_logic;
    clk: in std_logic;
    igual: out std_logic
  );
end comparador;

architecture Behavioral of comparador is

begin
        mayor <= '0';
        menor <= '0';
        igual <= '0';

    process(precio, introducido)
    begin
        if precio < introducido then
            mayor <= '1';
        elsif precio = introducido then
            igual <= '1';
        else
             menor <= '1';
        end if;
    end process;
end Behavioral;
